{
  "version": 3,
  "configurePresets": [
    {
      "name": "x64-debug",
      "displayName": "x64 Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/x64-Debug",
      "installDir": "${sourceDir}/out/install/x64-Debug",
      "cacheVariables": {
        "-allow-unsupported-compiler": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/x64-Release",
      "installDir": "${sourceDir}/out/install/x64-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build-x64-debug",
      "configurePreset": "x64-debug"
    },
    {
      "name": "build-x64-release",
      "configurePreset": "x64-release"
    }
  ]
}
